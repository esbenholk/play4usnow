






<div class="frontpage">
    <div class="strip">
     <img class="right strip" src="/assets/goddessvanessa.gif">
    </div>


    <div class="main-content">
        <div class="headline">PLAY 4 US NOW <br>{{name}}</div>
   
        <div class="row">
            <div class="performers column">
                    {{#performers}}
                        <div class="performer">
                            <img class="thumbnail"src="/assets/goddessvanessa.gif">
                            <p>{{name}}{{service}}</p>
                        </div>
                    {{/performers}}
            </div>

            <div class="performers column">
                    {{#performers2}}
                        <div class="performer">
                            <img class="thumbnail" src="/assets/goddessvanessa.gif">
                            <p>{{name}}{{service}}</p>
                        </div>
                    {{/performers2}}
            </div>
        </div>
        <div id="paypal-button-container">
            <div id="smart-button-container">

                <div><label for="description">PERFORMER </label><input type="text" name="descriptionInput" id="description" maxlength="127" value="">
